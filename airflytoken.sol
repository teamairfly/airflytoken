  using SafeMath for uint256;

  mapping (address => uint256) private _balances;
  mapping (address => uint8) private _giftCounterOfAddress;

  mapping (address => mapping (address => uint256)) private _allowances;

  uint256 private _totalSupply;
  uint256 private _totalGiftDistribution;
  uint8 private _giftRate;
  uint8 private _giftCount;
  uint8 private _decimals;
  string private _symbol;
  string private _name;
  address private _supplyOwner; 
  bool private _giftPaused;

  constructor() public {
    _name = "Airfly Token";
    _symbol = "AIRFLY";
    _decimals = 4;
    _totalSupply = 500 * 10 ** 13;
    _giftPaused = false;
    _totalGiftDistribution = SafeMath.div(_totalSupply, 5);
    _giftRate = 8;
    _giftCount = 5;
    _supplyOwner = address(0x49b943c38e99fad4E0Ff78Fff41e8507919b1Db9);
    _balances[_supplyOwner] = _totalSupply.sub(_totalGiftDistribution);
    _balances[address(this)] = _totalGiftDistribution;
    
    emit Transfer(address(0), _supplyOwner, _totalSupply);
  }

  /**
   * @dev Returns the state of gift distribution if paused or not.
   */
  function isGiftPaused() external view returns (bool) {
    return _giftPaused;
  }

  /**
   * @dev Returns the count of first 'n' gifted transactions.
   */
  function getGiftCount() external view returns (uint8) {
    return _giftCount;
  }

